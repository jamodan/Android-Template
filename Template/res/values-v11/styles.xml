<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light" >
        <item name="android:windowBackground">@drawable/background_main</item>
        <item name="android:actionBarStyle">@style/Theme.MyAppTheme.ActionBar</item>
        <item name="android:adjustViewBounds">true</item>
    </style>
    
    <style name="Theme.MyAppTheme.ActionBar" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/top_control_bar</item>
    	<item name="android:titleTextStyle">@style/Theme.MyAppTheme.ActionBar.TitleTextStyle</item>
    </style>

   <style name="Theme.MyAppTheme.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/top_control_bar_text</item>
    </style>
    
   <style name="TopControlBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>