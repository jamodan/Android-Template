<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.NoTitleBar" >
        <item name="android:windowBackground">@null</item>
    </style>
    
    <style name="TopControlBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@color/top_control_bar</item>
    </style>
    
    <style name="LogoButton">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:contentDescription">@string/imagedesc</item>
        <item name="android:background">@drawable/ic_launcher</item>
    </style>
    
    <style name="iGrowLogoButton">
        <item name="android:layout_width">105dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:contentDescription">@string/imagedesc</item>
        <item name="android:background">@drawable/igrow_logo</item>
    </style>
    
    <style name="WindowTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/top_control_bar_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
    </style>
    
    <style name="Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="MainButton">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@null</item>
    </style>
    
    <style name="DataRow">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    
    <style name="FieldBox">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>  
    </style>
    
    <style name="Field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#704814</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@null</item>
    </style>
    
    <style name="FieldNoneditable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@null</item>
    </style>
    
    <style name="EditableBox">
        <item name="android:layout_width">166dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/info</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
    <style name="Editable">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginLeft">45dp</item>
        <item name="android:background">@null</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="Noneditable">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#aaaaaa</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginLeft">45dp</item>
        <item name="android:background">@null</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>